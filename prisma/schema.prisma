// Prisma schema for NestJS auth system with refresh token sessions

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

// User model with global tokenVersion kill switch
model User {
  id           String     @id @default(uuid())
  email        String     @unique
  password     String     // bcrypt hashed
  tokenVersion Int        @default(0)  // Increment to invalidate all tokens
  sessions     Session[]
  tasks        Task[]
  categories   Category[]
  createdAt    DateTime   @default(now())
  updatedAt    DateTime   @updatedAt

  @@index([email])
}

// Session model - stores hashed refresh tokens per device
model Session {
  id            String           @id @default(uuid())
  userId        String
  user          User             @relation(fields: [userId], references: [id], onDelete: Cascade)

  jti           String           @unique  // JWT ID embedded in refresh token
  refreshHash   String                    // Hashed refresh token (bcrypt)

  platform      SessionPlatform           // WEB | MOBILE
  deviceLabel   String?                   // Optional device name/label
  userAgent     String?                   // Browser/app user agent
  ip            String?                   // IP address

  expiresAt     DateTime                  // When this refresh token expires
  revokedAt     DateTime?                 // When manually revoked
  replacedByJti String?                   // For rotation chain tracking

  createdAt     DateTime @default(now())
  lastUsedAt    DateTime @default(now())

  @@index([userId])
  @@index([jti])
  @@index([userId, revokedAt]) // For active session queries
}

enum SessionPlatform {
  WEB
  MOBILE
}

// Task model - User tasks with status and priority
model Task {
  id            String       @id @default(uuid())
  title         String       @db.VarChar(200)
  description   String?      @db.Text
  status        TaskStatus   @default(PENDIENTE)
  priority      TaskPriority @default(MEDIA)
  dueDate       DateTime?
  estimatedTime Int?         // Time in minutes
  actualTime    Int?         // Time in minutes
  tags          String[]     @default([])

  userId        String
  user          User         @relation(fields: [userId], references: [id], onDelete: Cascade)

  categoryId    String?
  category      Category?    @relation(fields: [categoryId], references: [id], onDelete: SetNull)

  createdAt     DateTime     @default(now())
  updatedAt     DateTime     @updatedAt
  deletedAt     DateTime?    // Soft delete

  @@index([userId])
  @@index([categoryId])
  @@index([status])
  @@index([deletedAt])
}

// Category model - Task categories per user
model Category {
  id          String    @id @default(uuid())
  name        String    @db.VarChar(50)
  color       String    @db.VarChar(7) // Hex color format #RRGGBB
  description String?

  userId      String
  user        User      @relation(fields: [userId], references: [id], onDelete: Cascade)

  tasks       Task[]

  createdAt   DateTime  @default(now())
  updatedAt   DateTime  @updatedAt
  deletedAt   DateTime? // Soft delete

  @@index([userId])
  @@index([deletedAt])
}

// Task status enum
enum TaskStatus {
  PENDIENTE
  EN_PROGRESO
  COMPLETADA
  CANCELADA
}

// Task priority enum
enum TaskPriority {
  BAJA
  MEDIA
  ALTA
  URGENTE
}
